@import 'nib'

gris = rgb(213,213,213)
gris_claro = rgb(240,240,240)
negro_transparente = rgba(0,0,0,0.65)

*
  -webkit-tap-highlight-color transparent
  -moz-tap-highlight-color transparent
  transition opacity 500ms, color 500ms
  &::selection
    background-color negro_transparente
    color red
body, html, .wrapper
  font-family Dosis, sans-serif
  font-size 16px
  height 100vh
  margin 0
  padding 0
h1
  font-size 4rem
  span.logoText
    text-shadow 0 2px 0 rgba(255,255,250,0.4)
h1,h2
  margin 0
h2
  font-size 3rem
p
  font-size 1.75rem
main
  align-items center
  color darkseagreen
  display flex
  justify-content center
  min-height 100vh
  text-align center
  #info
    h2
      line-height 1em
      span.logoText
        text-shadow 0 1px 0 rgba(255,255,250,0.4)
  #welcome
    figure
      color darkorange
      margin 0
      svg
        fill currentColor
    a
      color darkseagreen
      text-decoration none
      &:hover
        h2
          color darkorange
      h2
        font-family 'Pinyon Script', serif
span.highlighted
  line-height 1rem
.highlighted
  color darkorange
  font-size 1.75em
  text-shadow none
.loader
  align-items center
  background white
  bottom 0
  display flex
  justify-content center
  left 0
  position fixed
  right 0
  top 0
  z-index 100
  #crank
    animation spin 2s infinite ease-in-out
    background url(../img/crank.png) center no-repeat
    background-size cover
    height 128px
    width 128px
.wrapper
  overflow hidden
  position fixed
  width 100vw
  z-index -5
  .cover, .video, .window
    height inherit
    left 0
    position absolute
    top 0
    width inherit
  .cover
    background url(../img/bicycle.jpg) center no-repeat, white
    z-index -15
    @media screen and (max-height: 480px)
      background-size contain
    @media screen and (max-width: 800px)
      background-size contain
  .video
    left 50%
    top 50%
    transform translate(-50%, -50%)
    z-index -20
    #player
      height inherit
      width inherit
  .window
    background-color negro_transparente
    background-image url(../img/bright-squares.png)
    z-index -10

//Animations
@keyframes spin
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)

@keyframes zoomIn
  0%
    opacity: 0
    -webkit-transform: scale3d(.3, .3, .3)
    transform: scale3d(.3, .3, .3)
  50%
    opacity: 1

main.ng-enter
  backgroun cyan
  opacity 0
  transition 0.5s linear all
main.ng-enter-active
  background red
  opacity 1
